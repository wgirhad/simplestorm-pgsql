{
    "name": "wgirhad/simplestorm-pgsql",
    "type": "library",
    "description": "SQL stuff - for PostgreSQL",
    "keywords": ["pgsql","orm"],
    "license": ["MIT"],
    "authors": [
        {
            "name": "Willian Girhad",
            "email": "wgirhad@outlook.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-mbstring": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Wgirhad\\SimplestOrm\\Postgres\\": "src/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR12 src",
        "fix": "phpcbf --standard=PSR12 src"
    }
}
